Xft.dpi: 180
Xft.autohint: 0
Xft.lcddefault: lcddefault
Xft.hintstyle: hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

URxvt.font: xft:Hack:size=9:antialias=true
URxvt.boldFont: xft:Hack:size=9:antialias=true:bold
URxvt.scrollStyle: rxvt
URxvt.scrollBar: false
URxvt.pointerBlank: true

! URxvt*letterSpace: -1


URxvt.depth: 32
URxvt.saveLines: 10000
URxvt.internalBorder: 3
!URxvt.lineSpace: 0
URxvt.antialias: 1


! Cursor
URxvt.cursorBlink: true
URxvt.cursorColor: #657b83
URxvt.cursorUnderline: false

URxvt.perl-ext-common: default,matcher
URxvt.marcher.button: 11
URxvt.url-launcher: google-chrome-stable

! rofi
rofi.modi: run
rofi.font: Hack 16
rofi.width: 40
rofi.lines: 6
rofi.columns: 1
rofi.opacity: 80



/* Rofi */
#define r_bg   #1d2021
#define r_fg   #ebdbb2
#define r_hlfg #d65d0e

! States: bg, fg, bgalt, hlbg, hlfg
rofi.color-enabled: true
rofi.color-normal: r_bg,r_fg,#282828,r_bg,r_hlfg
rofi.color-urgent: r_bg,#fb4934,#282828,r_bg,r_hlfg
rofi.color-active: r_bg,r_fg,#282828,r_bg,#fe8019
! states: background, border
rofi.color-window: r_bg,#d5c4a1

Xcursor.theme: whiteglass
Xcursor.size: 32


